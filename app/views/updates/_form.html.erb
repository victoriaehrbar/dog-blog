<%= form_for @update do |f| %>
    <br>
    <%= f.label "Training Score: " %>
       <%= f.radio_button :training_score, "1"  %> 1
       <%= f.radio_button :training_score, "2"  %> 2
       <%= f.radio_button :training_score, "3"  %> 3
       <%= f.radio_button :training_score, "4"  %> 4
       <%= f.radio_button :training_score, "5"  %> 5
       <%= f.radio_button :training_score, "6"  %> 6
       <%= f.radio_button :training_score, "7"  %> 7
       <%= f.radio_button :training_score, "8"  %> 8
       <%= f.radio_button :training_score, "9"  %> 9
       <%= f.radio_button :training_score, "10"  %> 10
    <br>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :content, "Description" %>
    <%= f.text_area :content, size: "30x5" %>
    <br>
    <br>
    <%= f.hidden_field :dog_id %>
    <br>
    <br>
    <%= f.submit %>
<% end %>