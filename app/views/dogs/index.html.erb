<div class="container">
<% if @dogs == [] %>
    <h2>Sorry there are no dogs yet.</h2>
<% else %>

<h1 class="underlined">All Dogs</h1>
<br>
<ol>
    <% @dogs.each do |dog| %>
    <li>
    <%= link_to dog.dog_name, dog_path(dog) %>
    <br>
    <ul>
    <li>Breed: <%= dog.breed.breed_name %></li>
    <li>Weight: <%= dog.weight %></li>
    </ul>
    <br>
    <%= link_to "Update #{dog.dog_name}", new_dog_update_path(dog) %>
    <br>


    <% if authorized(dog, current_user )%>
        <%= link_to "Edit", edit_dog_path(dog) %>  or  
        <%= link_to "Delete", dog_path(dog), method: :delete, data: {confirm: "Are you sure you want to delete #{dog.dog_name}?" } %>
    <br>
        <% end %>


    </li>
    <br>
    <br>
<% end %>
</ol>
<br>
<% end %>
    <%= link_to "Add a new dog", new_dog_path %>

</div>